---
const { data, type } = Astro.props; 
// type = "resume" or "linkedin"
if (!data) return null;
---

<div class="p-6 mt-6 rounded-2xl shadow bg-white border border-gray-200 max-w-2xl mx-auto">
  <h2 class="text-2xl font-semibold text-gray-800 mb-2">
    {type === "resume" ? "Resume Analysis Result" : "LinkedIn Analysis Result"}
  </h2>

  <div class="mt-4 space-y-2">
    {data.resumeScore && (
      <p class="text-lg font-medium">📊 <b>Resume Score:</b> {data.resumeScore}/100</p>
    )}
    {data.jdMatchScore && (
      <p class="text-lg font-medium">🎯 <b>JD Match Score:</b> {data.jdMatchScore}/100</p>
    )}
    {data.profileScore && (
      <p class="text-lg font-medium">👔 <b>Profile Score:</b> {data.profileScore}/100</p>
    )}

    <div class="mt-4">
      <h3 class="font-semibold text-gray-700">✅ Strengths</h3>
      <ul class="list-disc list-inside text-gray-600">
        {data.strengths?.map((s) => <li>{s}</li>)}
      </ul>
    </div>

    <div class="mt-4">
      <h3 class="font-semibold text-gray-700">⚠️ Areas to Improve</h3>
      <ul class="list-disc list-inside text-gray-600">
        {data.improvements?.map((i) => <li>{i}</li>)}
      </ul>
    </div>

    {data.summary && (
      <p class="mt-4 text-gray-700"><b>💡 Summary:</b> {data.summary}</p>
    )}
  </div>
</div>
