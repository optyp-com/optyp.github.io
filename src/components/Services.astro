---
const { services } = Astro.props;
---

<section id="services" class="relative py-24 bg-gradient-to-b from-white to-primary-50 dark:from-dark-900 dark:to-dark-800">
  <div class="container mx-auto max-w-6xl px-6 text-center relative z-10">
    
    <!-- Section Heading -->
    <h2 class="font-heading text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
      Our Services
    </h2>
    <div class="w-20 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto mb-10 rounded-full"></div>

    <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-16">
      AI-powered tools and guidance to help you optimize resumes, LinkedIn profiles, and portfolios for maximum career impact.
    </p>

    <!-- Services Grid -->
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((service, i) => (
        <div
          key={service.title}
          class="group relative bg-white/40 dark:bg-dark-800/50 backdrop-blur-md border border-white/20 
                 rounded-2xl shadow-soft p-8 transition-transform duration-300 hover:scale-105 hover:shadow-glass"
          data-aos="fade-up"
          data-aos-delay={i * 100}
        >
          <!-- Icon -->
          {service.icon && (
            <div class="w-16 h-16 mx-auto mb-6 flex items-center justify-center rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 shadow-md transform group-hover:scale-110 transition">
              <img
                src={service.icon}
                alt={service.title}
                class="w-8 h-8"
                loading="lazy"
              />
            </div>
          )}

          <!-- Title -->
          <h3 class="font-heading text-2xl font-semibold mb-3 text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-gray-600 dark:text-gray-300">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>

  <!-- AOS Animation Script -->
  <script type="module">
    import AOS from "aos";
    import "aos/dist/aos.css";
    AOS.init({
      duration: 800,
      once: true,
      offset: 80,
    });
  </script>
</section>
