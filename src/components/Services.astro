---
const { services } = Astro.props;
---

<section id="services" class="bg-gray-50 py-16">
  <div class="container mx-auto max-w-5xl px-4 text-center">
    <!-- Section Heading -->
    <h2 class="text-4xl font-extrabold mb-4 text-gray-900">
      Our Services
    </h2>
    <div class="w-20 h-1 bg-brand mx-auto mb-10 rounded-full"></div>

    <p class="text-gray-600 mb-12 max-w-3xl mx-auto">
      We offer a full suite of career services that not only optimize your existing profiles 
      but also build new, high-impact accounts from scratch.
    </p>

    <!-- Services Grid -->
    <div class="grid gap-10 md:grid-cols-3">
      {services.map(service => (
        <div
          class="bg-brand p-6 rounded-lg shadow hover:shadow-lg transition duration-300 hover:bg-brand-dark text-white"
          key={service.title}
        >
          <!-- Icon in white circle -->
          {service.icon && (
            <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-white shadow-sm">
              <img
                src={service.icon}
                alt={service.title}
                class="w-8 h-8 text-brand"
                loading="lazy"
              />
            </div>
          )}

          <!-- Title -->
          <h3 class="text-xl font-semibold mb-2">{service.title}</h3>

          <!-- Description -->
          <p class="text-gray-100">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
