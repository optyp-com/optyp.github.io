---
const { services } = Astro.props;
---

<section 
  id="services" 
  class="py-16 sm:py-20 bg-gray-50 dark:bg-gray-900 transition-colors duration-500"
  itemscope
  itemtype="https://schema.org/Service"
>
  <div class="container-custom text-center">
    <!-- Heading -->
    <h2 
      class="text-3xl sm:text-4xl font-heading font-bold mb-6 text-primary-700 dark:text-primary-400"
      itemprop="name"
    >
      Our Services
    </h2>
    <p 
      class="text-base sm:text-lg text-gray-600 dark:text-gray-300 mb-12 max-w-3xl mx-auto"
      itemprop="description"
    >
      We offer a full suite of career services that not only
      <span class="font-semibold text-primary-600 dark:text-primary-400">optimize your existing profiles</span>
      but also build new, high-impact accounts from scratch.
    </p>

    <!-- Service Cards -->
    <div class="grid gap-8 md:grid-cols-3">
      {services.map(service => (
        <div
          class="card dark:bg-gray-800 dark:text-gray-200 hover:shadow-xl transition-shadow duration-300"
          key={service.title}
          itemscope
          itemtype="https://schema.org/Service"
        >
          <!-- Service Title -->
          <h3 class="text-xl font-semibold mb-3" itemprop="name">{service.title}</h3>

          <!-- Service Description -->
          <p class="text-gray-700 dark:text-gray-400 text-base leading-relaxed" itemprop="description">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
