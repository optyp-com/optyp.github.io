<section id="services" class="relative py-20 bg-gradient-to-b from-black via-gray-900 to-black text-white overflow-hidden">
  <!-- Background Neon Glow -->
  <div class="absolute -top-20 left-10 w-[300px] h-[300px] bg-emerald-500/20 rounded-full blur-3xl"></div>
