---
/* File: src/components/Services.astro */
const services = [
  {
    id: 'ats',
    title: 'ATS Resume Optimization',
    desc: 'We optimize resume structure, keywords, and formatting so applicant tracking systems parse your profile correctly.',
    icon: 'checklist',
  },
  {
    id: 'resume-design',
    title: 'Resume Design & Layout',
    desc: 'Modern, recruiter-friendly layouts that balance ATS-readability with clean visual hierarchy.',
    icon: 'document',
  },
  {
    id: 'linkedin',
    title: 'LinkedIn Headline & Summary',
    desc: 'Headline and summary rewrites targeting recruiter search terms and clarity for humans and bots.',
    icon: 'linkedin',
  },
  {
    id: 'cover-letter',
    title: 'Cover Letter Review',
    desc: 'Concise, tailored cover letters that complement your resume and call out high-impact achievements.',
    icon: 'letter',
  },
  {
    id: 'interview',
    title: 'Interview Coaching',
    desc: 'Mock interviews + feedback on storytelling, STAR responses and salary negotiation tactics.',
    icon: 'chat',
  },
  {
    id: 'profile-audit',
    title: 'Profile Audit (Full)',
    desc: 'Complete audit: resume, LinkedIn, and job application checklist with prioritized fixes.',
    icon: 'audit',
  }
];

function renderIcon(name: string) {
  switch(name) {
    case 'checklist': return `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7M9 6h11M9 12h11M9 18h11"/></svg>`;
    case 'document': return `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 2h8l5 5v13a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2z"/></svg>`;
    case 'linkedin': return `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand" fill="currentColor"><path d="M4.98 3.5C4.98 4.88 3.9 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5zM.5 8h4V24h-4zM9.5 8h3.6v2.3h.05c.5-.9 1.7-1.8 3.5-1.8 3.8 0 4.5 2.4 4.5 5.5V24h-4v-7.9c0-1.9 0-4.4-2.7-4.4-2.7 0-3.1 2.1-3.1 4.3V24h-4z"/></svg>`;
    case 'letter': return `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16v16H4z"/><path d="M22 4L12 13 2 4"/></svg>`;
    case 'chat': return `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"/></svg>`;
    case 'audit': return `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>`;
    default: return '';
  }
}
---
<section id="services" class="py-20 bg-gradient-to-b from-white to-gray-50">
  <div class="container">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-heading font-extrabold">Our Services</h2>
      <p class="mt-3 text-gray-600 max-w-2xl mx-auto">Everything you need to stand out â€” from ATS-ready resumes to interview coaching.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map(s => (
        <article tabindex="0" class="bg-white rounded-xl shadow-card hover:shadow-lg p-6 transition transform hover:-translate-y-1" aria-labelledby={`s-${s.id}-title`}>
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-lg flex items-center justify-center bg-brand/10" set:html={renderIcon(s.icon)} />
            <div>
              <h3 id={`s-${s.id}-title`} class="text-lg font-semibold text-slate-900">{s.title}</h3>
              <p class="mt-2 text-sm text-slate-700">{s.desc}</p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
