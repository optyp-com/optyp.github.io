<section id="hero" class="relative flex items-center justify-center min-h-[70vh] bg-primary-500 dark:bg-gray-900 section-padding transition-colors duration-500">
  <div class="container-custom">
    <div class="flex flex-col items-center text-center md:grid md:grid-cols-2 md:gap-8 md:text-left">
      
      <!-- Text Content -->
      <div aria-label="OptyP Hero" class="mb-6 md:mb-0">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-heading font-extrabold leading-tight text-white dark:text-white transition-colors duration-500">
          Optimize Your <span class="text-primary-100 dark:text-primary-400">Professionalism</span>
        </h1>
      </div>
      <!-- Right Side (Image or Illustration placeholder) -->
      <div class="flex justify-center md:justify-end">
        <img src="/images/illu.svg" alt="Career Growth" class="w-64 sm:w-80 md:w-full max-w-md dark:opacity-90 transition-opacity duration-500" />
      </div>
    </div>
  </div>
  <!-- Background Gradient Overlay -->
  <div class="absolute inset-0 -z-10">
    <div class="w-full h-full bg-gradient-to-b from-primary-500 via-primary-600 to-primary-700 dark:from-gray-800 dark:via-gray-900 dark:to-gray-900 transition-colors duration-500"></div>
  </div>
</section>
