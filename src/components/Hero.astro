<section
  id="hero"
  class="relative flex items-center justify-center min-h-[92vh] overflow-hidden text-white"
  role="banner"
>
  <!-- Background -->
  <div class="absolute inset-0 -z-10">
    <!-- Animated dark gradient -->
    <div class="w-full h-full bg-gradient-to-br from-black via-gray-900 to-black animate-gradient-x"></div>
    <!-- Subtle overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent"></div>
  </div>

  <div class="container-custom px-6 sm:px-10 md:pl-8">
    <div class="flex flex-col-reverse md:grid md:grid-cols-2 md:gap-12 items-center text-center md:text-left">
      
      <!-- Text Content -->
      <div aria-label="OPTYP Hero" class="mt-10 md:mt-0">
        <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl shadow-xl p-6 sm:p-8 inline-block transition-all duration-500 hover:border-cyan-400/60 hover:shadow-[0_0_25px_rgba(0,255,204,0.4)]">
          
          <h1 class="animate-fadeInUp [animation-delay:0.1s] text-4xl sm:text-5xl md:text-6xl font-heading font-extrabold leading-tight drop-shadow-lg">
            Optimize Your <span class="text-cyan-400">Professionalism</span>
          </h1>

          <p class="animate-fadeInUp [animation-delay:0.3s] mt-4 text-lg sm:text-xl text-gray-200">
            Premium resume, LinkedIn, Naukri, and portfolio optimization services that make you stand out worldwide.
          </p>

          <!-- CTAs -->
          <div class="animate-fadeInUp [animation-delay:0.5s] mt-6 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a 
              href="#contact" 
              class="glass-btn px-6 py-3 rounded-xl font-semibold shadow-lg text-center"
            >
              Get Started
            </a>
            <a 
              href="#plans" 
              class="px-6 py-3 rounded-xl border border-white/40 text-white font-semibold 
              hover:bg-white/10 hover:scale-105 hover:shadow-lg transition-all"
            >
              View Plans
            </a>
          </div>
        </div>
      </div>

      <!-- Illustration / Hero Image -->
      <div class="flex justify-center md:justify-end animate-fadeInUp [animation-delay:0.7s] floating">
        <img
          src="/images/illu.svg"
          alt="Illustration representing career growth and optimization"
          class="w-64 sm:w-80 md:w-full max-w-md drop-shadow-2xl"
          loading="lazy"
        />
      </div>
    </div>
  </div>

  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" aria-label="Scroll Down" class="group">
      <svg class="w-8 h-8 text-white opacity-80 group-hover:text-cyan-400 group-hover:opacity-100 transition-all drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </a>
  </div>

  <!-- Styles -->
  <style>
    /* Animated gradient */
    @keyframes gradient-x {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    .animate-gradient-x { background-size: 200% 200%; animation: gradient-x 12s ease infinite; }

    /* Floating illustration */
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-14px); }
    }
    .floating { animation: float 6s ease-in-out infinite; }

    /* Fade-in stagger */
    @keyframes fadeInUp {
      0% { opacity: 0; transform: translateY(30px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeInUp { opacity: 0; animation: fadeInUp 1s ease forwards; }

    /* Neon Glass CTA */
    .glass-btn {
      background: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.25);
      color: #00ffcc;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
    }
    .glass-btn:hover {
      background: rgba(0, 255, 204, 0.15);
      box-shadow: 0 0 20px #00ffcc;
      color: #fff;
      transform: scale(1.05);
    }
  </style>
</section>
