---
<section
  id="hero"
  class="relative flex items-center justify-center min-h-[90vh] overflow-hidden"
>
  <!-- Background gradient -->
  <div class="absolute inset-0 -z-10">
    <div class="w-full h-full bg-hero-gradient animate-gradient-x"></div>
    <div class="absolute inset-0 bg-black/30"></div>
  </div>

  <div class="container-custom md:pl-8">
    <div class="flex flex-col items-center text-center md:grid md:grid-cols-2 md:gap-12">
      
      <!-- Left Content -->
      <div aria-label="OPTYP Hero" class="mb-10 md:mb-0 animate-fadeInUp">
        <div class="bg-glass-gradient backdrop-blur-xl border border-white/20 rounded-3xl shadow-glass p-6 sm:p-10 inline-block hover:border-primary-300/60 hover:shadow-glow transition-all duration-500">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-heading font-extrabold leading-tight text-white drop-shadow-lg">
            Optimize Your <span class="text-primary-100">Professionalism</span>
          </h1>
          <p class="mt-4 text-lg sm:text-xl text-white/90">
            Get resume, LinkedIn, Naukri, and portfolio optimization that makes you stand out worldwide.
          </p>

          <!-- CTA Buttons -->
          <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a 
              href="#contact" 
              class="px-6 py-3 rounded-xl bg-white/80 text-primary-700 font-semibold shadow-md backdrop-blur-sm
                     hover:bg-gradient-to-r hover:from-primary-400 hover:to-primary-600 hover:text-white hover:scale-105 transition-all animate-pulseGlow"
            >
              Get Started
            </a>
            <a 
              href="#plans" 
              class="px-6 py-3 rounded-xl border border-white/60 text-white font-semibold 
                     hover:bg-white/10 hover:scale-105 hover:shadow-md transition-all"
            >
              View Plans
            </a>
          </div>
        </div>
      </div>

      <!-- Right Illustration -->
      <div class="flex justify-center md:justify-end animate-fadeInUp floating">
        <img
          src="/images/illu.svg"
          alt="Career Growth"
          class="w-64 sm:w-80 md:w-full max-w-md drop-shadow-2xl"
        />
      </div>
    </div>
  </div>

  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" aria-label="Scroll Down" class="group">
      <svg class="w-8 h-8 text-white opacity-80 group-hover:text-primary-200 group-hover:opacity-100 transition-all drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </a>
  </div>
</section>
