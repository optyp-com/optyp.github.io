<section
  id="hero"
  class="relative flex items-center justify-center min-h-[90vh] overflow-hidden bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700"
>
  <!-- Overlay for better text contrast -->
  <div class="absolute inset-0 bg-black/40 -z-10"></div>

  <div class="container mx-auto px-6 md:px-12">
    <div class="grid md:grid-cols-2 items-center gap-12 text-center md:text-left">
      
      <!-- Text Content -->
      <div aria-label="OPTYP Hero" class="animate-fadeInUp space-y-6">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-heading font-extrabold leading-tight text-white">
          Optimize Your <span class="bg-gradient-to-r from-primary-200 to-secondary-400 bg-clip-text text-transparent">Professionalism</span>
        </h1>
        
        <p class="mt-4 text-lg sm:text-xl text-white/90 max-w-lg mx-auto md:mx-0">
          AI-powered resume, LinkedIn, and portfolio optimization to help you stand out worldwide.
        </p>

        <!-- CTA Buttons -->
        <div class="mt-6 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <a 
            href="#contact" 
            class="px-6 py-3 rounded-xl bg-primary-600 text-white font-semibold shadow-lg hover:shadow-glass hover:scale-105 transition"
          >
            Get Started
          </a>
          <a 
            href="#plans" 
            class="px-6 py-3 rounded-xl border border-white/60 text-white font-semibold hover:bg-white/10 hover:scale-105 hover:shadow-lg transition"
          >
            View Plans
          </a>
        </div>
      </div>

      <!-- Right Side (Illustration) -->
      <div class="flex justify-center md:justify-end animate-float">
        <img
          src="/images/illu.svg"
          alt="Illustration of career growth"
          class="w-64 sm:w-80 md:w-full max-w-md drop-shadow-2xl"
        />
      </div>
    </div>
  </div>

  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" aria-label="Scroll Down" class="group">
      <svg class="w-8 h-8 text-white opacity-80 group-hover:text-primary-200 transition-all drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </a>
  </div>

  <!-- Animations -->
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-12px); }
    }
    .animate-float { animation: float 6s ease-in-out infinite; }

    @keyframes fadeInUp {
      0% { opacity: 0; transform: translateY(30px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeInUp { animation: fadeInUp 1s ease-out forwards; }
  </style>
</section>
