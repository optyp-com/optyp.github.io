--- 
<section id="hero" class="relative flex items-center justify-center min-h-[84vh] overflow-hidden" role="banner" aria-label="OPTYP hero section">
  <!-- Background gradient + subtle moving highlights -->
  <div class="absolute inset-0 -z-10">
    <div class="w-full h-full" style="background: radial-gradient(1200px 600px at 10% 20%, rgba(0,255,204,0.06), transparent 6%), radial-gradient(900px 450px at 90% 80%, rgba(110,208,255,0.04), transparent 6%), linear-gradient(180deg, rgba(3,7,11,1), rgba(7,10,12,1)); background-blend-mode: screen; background-repeat: no-repeat;"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
  </div>

  <div class="container-custom px-6 sm:px-10">
    <div class="flex flex-col-reverse md:grid md:grid-cols-2 md:gap-12 items-center text-center md:text-left">

      <!-- LEFT: Text content -->
      <div class="mt-8 md:mt-0">
        <div class="glass-card inline-block p-6 sm:p-8">
          <h1 class="h-hero animate-fadeInUp" style="animation-delay: 0.06s;">
            From <span class="text-[color:var(--accent-2)]">overlooked</span> to <span style="color:var(--accent-1)">headhunted</span>.
          </h1>

          <p class="mt-4 body-md text-gray-300 animate-fadeInUp" style="animation-delay: 0.18s;">
            We rewrite resumes, LinkedIn & portfolio stories so recruiters notice â€” proven for professionals worldwide. <strong class="text-white">500+ profiles optimized</strong>.
          </p>

          <!-- CTAs -->
          <div class="mt-6 flex flex-col sm:flex-row gap-3 justify-center md:justify-start animate-fadeInUp" style="animation-delay:0.34s;">
            <a
              href="#contact"
              class="glass-btn btn-gradient text-center"
              onclick="if(typeof openContactForm === 'function'){ openContactForm(); } else { /* fallback: scroll */ const el = document.getElementById('contact'); if(el) el.scrollIntoView({behavior:'smooth', block:'start'}); }"
            >
              Get Started
            </a>

            <a
              href="#plans"
              class="inline-flex items-center justify-center gap-2 glass-btn text-white"
              onclick="const el = document.getElementById('plans'); if(el){ el.scrollIntoView({behavior:'smooth', block:'start'});}">
              View Plans
            </a>
          </div>

          <!-- Micro-trust / proof row -->
          <div class="mt-5 text-sm text-gray-300 flex flex-col sm:flex-row gap-3 items-center md:items-start">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M5 12l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
              <span>500+ profiles optimized</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 2l3 6 6 .5-4.5 4 1 6L12 16l-5.5 3.5 1-6L3 8.5 9 8 12 2z" stroke="currentColor" stroke-width="0"/></svg>
              <span>Trusted across 30+ countries</span>
            </div>
          </div>
        </div>
      </div>

      <!-- RIGHT: Illustration -->
      <div class="flex justify-center md:justify-end mb-8 md:mb-0 animate-float" style="animation-delay:0.6s;">
        <img
          src="/images/illu.svg"
          alt="Illustration showing career growth and profile optimization"
          class="w-64 sm:w-80 md:max-w-md drop-shadow-[0_25px_50px_rgba(0,0,0,0.6)]"
          loading="lazy"
        />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 animate-fadeInUp" style="animation-delay:0.9s;">
    <a href="#about" aria-label="Scroll to about" class="group">
      <svg class="w-8 h-8 text-gray-300 group-hover:text-[color:var(--accent-1)] transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </a>
  </div>

  <style>
    /* Small inline tweaks that complement global.css */
    /* Ensure heading wraps nicely on small screens */
    .h-hero { word-break: break-word; }

    /* Respect reduced motion for float */
    @media (prefers-reduced-motion: reduce) {
      .animate-float { animation: none !important; transform: none !important; }
    }
  </style>
</section>
