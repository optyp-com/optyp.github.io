---
/* File: src/components/Hero.astro */
---
<section id="hero" class="relative min-h-[84vh] bg-gradient-to-r from-brand to-accent animate-gradientShift overflow-hidden">
  <!-- subtle overlay -->
  <div class="absolute inset-0 opacity-20 bg-[url('/grid.svg')] bg-repeat"></div>

  <div class="container relative z-10 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
      
      <!-- Left -->
      <div class="text-white md:pr-6">
        <h1 class="text-4xl md:text-5xl font-heading font-extrabold leading-tight drop-shadow-sm">
          Optimize your <span class="text-accent">professionalism</span> — land the interviews that matter
        </h1>
        <p class="mt-4 text-lg md:text-xl text-white/90 max-w-xl">
          We combine ATS optimization, resume design, and LinkedIn strategy to get your profile recruiter-ready. Faster callbacks — higher confidence.
        </p>

        <div class="mt-8 flex flex-wrap gap-3">
          <button class="btn-primary" onclick="openContactForm()">Get Started</button>
          <a href="#plans" class="btn-ghost">See Plans</a>
        </div>

        <!-- micro features -->
        <div class="mt-8 grid grid-cols-2 gap-3 max-w-md">
          <div class="flex items-start gap-3 bg-white/10 backdrop-blur rounded-xl p-3">
            <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
            </div>
            <div>
              <div class="text-sm font-semibold text-white">ATS + Recruiter Optimized</div>
              <div class="text-xs text-white/80 mt-1">Past 210+ resumes optimized for real ATS systems.</div>
            </div>
          </div>

          <div class="flex items-start gap-3 bg-white/10 backdrop-blur rounded-xl p-3">
            <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2l3 7h7l-6 4 3 7-7-4-7 4 3-7-6-4h7z"/></svg>
            </div>
            <div>
              <div class="text-sm font-semibold text-white">Design & Copy Refinement</div>
              <div class="text-xs text-white/80 mt-1">Polished, recruiter-friendly structure and language.</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right -->
      <div class="relative">
        <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 shadow-glass animate-float">
          <img src="/images/hero-banner.svg" alt="Resume illustration" class="w-full h-auto" />
        </div>

        <!-- Floating CTA card -->
        <div class="absolute left-4 bottom-6 bg-white/10 backdrop-blur-xl rounded-xl p-4 w-64 hidden md:block">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-xs font-semibold text-white/90">Resume Review</div>
              <div class="text-sm font-bold text-white mt-1">Get a free quick scan</div>
            </div>
            <button class="btn-primary btn-sm" onclick="openContactForm()">Start</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
