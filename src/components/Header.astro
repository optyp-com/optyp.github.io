--- 
<header class="bg-white shadow sticky top-0 z-40">
  <div class="container mx-auto flex items-center justify-between px-4 py-3">
    <!-- Logo -->
    <a href="/optyp.github.io/" class="flex items-center space-x-2">
      <img src="/optyp.github.io/images/logo.svg" alt="OPTYP Logo" class="h-10 w-auto" />
      <span class="font-bold text-xl text-primary-600 tracking-wide">OPTYP</span>
    </a>
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-8">
      <a href="/optyp.github.io/" class="text-gray-700 hover:text-primary-500 font-semibold">Home</a>
      <a href="/optyp.github.io/#services" class="text-gray-700 hover:text-primary-500 font-semibold">Services</a>
      <a href="/optyp.github.io/#plans" class="text-gray-700 hover:text-primary-500 font-semibold">Plans</a>
      <a href="https://forms.gle/e2psZyv2BjAniPeP6" target="_blank" rel="noopener" class="text-gray-700 hover:text-primary-500 font-semibold">Contact</a>
    </nav>
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-button" class="md:hidden focus:outline-none" aria-label="Toggle Menu">
      <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" stroke-width="2"
        viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <line x1="3" y1="12" x2="21" y2="12" />
        <line x1="3" y1="6" x2="21" y2="6" />
        <line x1="3" y1="18" x2="21" y2="18" />
      </svg>
    </button>
  </div>
  <!-- Mobile Navigation Menu -->
  <nav id="mobile-menu" class="md:hidden bg-white shadow-lg absolute w-full left-0 top-16 hidden">
    <div class="px-4 py-4 space-y-2">
      <a href="/optyp.github.io/" class="block text-gray-700 hover:text-primary-500 font-semibold">Home</a>
      <a href="/optyp.github.io/#services" class="block text-gray-700 hover:text-primary-500 font-semibold">Services</a>
      <a href="/optyp.github.io/#plans" class="block text-gray-700 hover:text-primary-500 font-semibold">Plans</a>
      <a href="https://forms.gle/e2psZyv2BjAniPeP6" target="_blank" rel="noopener" class="block text-gray-700 hover:text-primary-500 font-semibold">Contact</a>
    </div>
  </nav>
  <script type="module">
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    button?.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>
