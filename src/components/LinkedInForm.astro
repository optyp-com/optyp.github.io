---
import { useState } from "preact/hooks";
import ResultCard from "./ResultCard.astro";

const [result, setResult] = useState(null);
const [loading, setLoading] = useState(false);
const [error, setError] = useState("");
---

<div class="max-w-2xl mx-auto p-6 bg-white rounded-2xl shadow border border-gray-200 mt-10">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">ðŸ’¼ LinkedIn Profile Analyzer</h2>

  <form
    onSubmit={async (e) => {
      e.preventDefault();
      setError("");
      setResult(null);
      setLoading(true);

      const formData = new FormData(e.target);
      const payload = {
        profileUrl: formData.get("profileUrl"),
      };

      try {
        const res = await fetch("/api/linkedin-score", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload),
        });
        const json = await res.json();
        if (json.success) {
          setResult(json.data);
        } else {
          setError(json.error || "Something went wrong");
        }
      } catch (err) {
        setError("Error connecting to AI service");
      } finally {
        setLoading(false);
      }
    }}
    class="space-y-4"
  >
    <div>
      <label class="block font-medium text-gray-700 mb-1">LinkedIn Profile URL</label>
      <input
        type="url"
        name="profileUrl"
        placeholder="https://linkedin.com/in/yourname"
        required
        class="block w-full border border-gray-300 p-2 rounded-lg"
      />
    </div>

    <button
      type="submit"
      disabled={loading}
      class="w-full bg-green-600 text-white p-2 rounded-lg hover:bg-green-700 transition"
    >
      {loading ? "Analyzing..." : "Analyze Profile"}
    </button>

    {error && <p class="text-red-600 mt-2">{error}</p>}
  </form>

  {result && <ResultCard data={result} type="linkedin" />}
</div>
