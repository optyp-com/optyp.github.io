---
/* File: src/components/Testimonials.astro */
const quotes = [
  {
    name: 'Aisha R.',
    role: 'Frontend Engineer',
    text: 'OPTYP helped me reframe achievements and doubled my interview rate within 3 weeks.',
  },
  {
    name: 'Rahul M.',
    role: 'Data Scientist',
    text: 'Their ATS optimization found formatting problems I never knew were blocking my resume.',
  },
  {
    name: 'Pooja K.',
    role: 'Product Designer',
    text: 'Beautiful layout + strong copy. Recruiters commented on clarity during screening calls.',
  }
];
---
<section id="testimonials" class="py-20 bg-gray-50">
  <div class="container">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-heading font-extrabold">Hear from our clients</h2>
      <p class="mt-3 text-gray-600 max-w-2xl mx-auto">Real outcomes from people across industries — see how OPTYP helped them stand out.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {quotes.map(q => (
        <figure class="bg-white rounded-xl p-6 shadow-card hover:shadow-lg transition">
          <figcaption class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-brand to-accent flex items-center justify-center font-bold text-white">
              {q.name[0]}
            </div>
            <div>
              <div class="font-semibold text-slate-900">{q.name}</div>
              <div class="text-sm text-gray-600">{q.role}</div>
            </div>
          </figcaption>
          <blockquote class="mt-4 text-gray-700">“{q.text}”</blockquote>
        </figure>
      ))}
    </div>

    <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="flex items-center justify-center text-gray-400 font-semibold">Logo A</div>
      <div class="flex items-center justify-center text-gray-400 font-semibold">Logo B</div>
      <div class="flex items-center justify-center text-gray-400 font-semibold">Logo C</div>
      <div class="flex items-center justify-center text-gray-400 font-semibold">Logo D</div>
    </div>
  </div>
</section>
