---
const { testimonials } = Astro.props;
---

<section 
  id="testimonials" 
  class="py-16 sm:py-20 bg-white dark:bg-gray-900 transition-colors duration-500"
  itemscope
  itemtype="https://schema.org/Review"
>
  <div class="container-custom text-center">
    <!-- Heading -->
    <h2 
      class="text-3xl sm:text-4xl font-heading font-bold mb-4 text-primary-700 dark:text-primary-400"
      itemprop="name"
    >
      Hear From Our Clients Worldwide
    </h2>

    <!-- Visible Rating Badge -->
    <p 
      class="text-lg font-semibold text-primary-600 dark:text-primary-400 mb-8"
      itemprop="aggregateRating"
      itemscope
      itemtype="https://schema.org/AggregateRating"
    >
      ⭐ <span itemprop="ratingValue">4.8</span>/5 
      based on <span itemprop="reviewCount">500</span>+ client reviews
      <meta itemprop="bestRating" content="5" />
      <meta itemprop="worstRating" content="1" />
    </p>

    <!-- Intro Text -->
    <p 
      class="text-base sm:text-lg mb-4 text-gray-700 dark:text-gray-300 max-w-3xl mx-auto"
      itemprop="description"
    >
      We have successfully optimized over
      <span class="font-semibold text-primary-600 dark:text-primary-400">500+ professional profiles</span>
      across multiple countries, empowering careers globally.
    </p>

    <p class="mb-12 text-base sm:text-lg font-semibold text-primary-700 dark:text-primary-400 max-w-2xl mx-auto">
      <strong>We value your privacy.</strong><br />
      Your personal and professional details are never disclosed.<br />
      Confidentiality and trust are the foundation of our service.
    </p>

    <!-- Testimonials Grid -->
    <div class="grid gap-8 md:grid-cols-3">
      {testimonials.map(({ quote, profession, location }) => (
        <blockquote 
          class="card bg-gray-50 dark:bg-gray-800 dark:border-gray-700 hover:shadow-lg transition-shadow duration-300 text-left"
          itemscope
          itemtype="https://schema.org/Review"
        >
          <!-- Quote -->
          <p 
            class="text-gray-800 dark:text-gray-200 italic mb-6 text-base sm:text-lg leading-relaxed"
            itemprop="reviewBody"
          >
            “{quote}”
          </p>

          <!-- Reviewer -->
          <footer class="flex items-center justify-between text-sm font-medium text-primary-600 dark:text-primary-400">
            <span itemprop="author">{profession}</span>
            <span class="text-gray-500 dark:text-gray-400" itemprop="location">{location}</span>
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>
