<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">

      <!-- Company Info -->
      <div class="md:col-span-1 flex flex-col">
        <div class="flex items-center mb-4 space-x-3">
          <img src="/images/logo.svg" alt="OPTYP Logo" class="h-8 w-auto" />
          <h3 class="text-xl font-bold text-blue-400">OptyP</h3>
        </div>
        <p class="text-gray-300 text-sm leading-relaxed">
          Professional resume & profile optimization services. Get Set, Get Hired!
        </p>
        <div class="mt-4">
          <a href="mailto:info@optyp.com" 
             class="text-blue-400 hover:text-blue-300 transition-colors duration-200">
            info@optyp.com
          </a>
        </div>
        <!-- Social Media Icons -->
        <div class="flex space-x-4 mt-6">
          <a href="https://www.linkedin.com/in/your-profile" target="_blank" rel="noopener" aria-label="LinkedIn" class="text-blue-500 hover:text-blue-400 transition-colors duration-200">
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true" >
