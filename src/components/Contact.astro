<section class="bg-gray-900 py-20">
  <div class="container mx-auto max-w-5xl px-4 text-center">
    <h2 class="text-4xl font-extrabold mb-4 text-white tracking-wide-heading">
      Contact Us
    </h2>
    <div class="w-20 h-1 bg-gradient-to-r from-green-500 to-green-600 mx-auto mb-10 rounded-full"></div>
    <p class="text-gray-300 mb-12 max-w-xl mx-auto text-lg">
      Have questions or want to get started? Our team is ready to help you succeed.
    </p>
    <div class="flex flex-col items-center space-y-2">
      <button
        class="inline-block bg-gradient-to-r from-green-500 to-green-600 text-black px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-green-500/30 hover:scale-105 transition duration-300 animate-pulse-smooth"
        onclick="openContactForm()"
      >
        Get Started
      </button>
    </div>
  </div>
</section>

<div id="contact-modal"
     class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-80 hidden opacity-0 transition-opacity duration-500 ease-out"
     onclick="closeContactForm()">
  <div id="contact-modal-content"
       class="relative bg-gray-800/50 backdrop-blur-xl border border-white/10 shadow-lg
              w-full h-full sm:w-[95%] sm:h-[90%] md:w-[70%] lg:w-[50%] md:h-auto
              flex flex-col transform transition-all duration-500 ease-out
              sm:rounded-2xl md:rounded-2xl
              translate-y-10 opacity-0 scale-95"
       onclick="event.stopPropagation()">

    <div class="sticky top-0 z-10 flex justify-end p-3 bg-gray-900/30 backdrop-blur-lg border-b border-white/10 sm:rounded-t-2xl">
      <button onclick="closeContactForm()"
        class="w-8 h-8 flex items-center justify-center bg-gray-700 hover:bg-gray-600 text-white rounded-full shadow-md transition duration-300 hover:scale-105">âœ•</button>
    </div>

    <div class="flex-1 overflow-y-auto p-6 sm:p-10">
      <form id="contact-form" class="space-y-6" novalidate>
        <style>
          .form-input {
            @apply w-full rounded-xl border p-3 bg-gray-900/80 text-white border-gray-600 placeholder-gray-500;
            @apply focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition;
          }
          .form-label {
            @apply block text-sm font-semibold mb-1 text-gray-300;
          }
        </style>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="form-label">Full Name *</label>
            <input type="text" name="name" required class="form-input">
            <div class="field-error text-red-400 text-sm mt-1 hidden"></div>
          </div>
          <div>
            <label class="form-label">Email *</label>
            <input type="email" name="email" required class="form-input">
            <div class="field-error text-red-400 text-sm mt-1 hidden"></div>
          </div>
        </div>
        
        <div class="text-center pt-4">
            <button id="submit-btn" type="submit"
              class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-green-500 to-green-600 text-black px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-green-500/30 hover:scale-105 transition">
              <span id="btn-text">Send Message</span>
              <svg id="btn-spinner" class="animate-spin h-5 w-5 text-black hidden" ></svg>
            </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script is:inline src="../scripts/contact.js"></script>