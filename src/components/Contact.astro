---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact Us – OptyP">
  <main id="main-content" class="container mx-auto px-4 py-16">
    <h1 class="text-3xl font-heading font-bold mb-6">Contact Us</h1>
    <iframe
      src="https://forms.gle/oHuSeBiNkYYmWke4A?embedded=true"
      width="100%"
      height="800"
      frameborder="0"
      class="rounded-lg shadow-md"
    >
      Loading…
    </iframe>
    <p class="mt-6 text-lg text-gray-700">
      Or email us at
      <a href="mailto:info@optyp.com" class="text-primary-600 font-medium hover:underline">
        info@optyp.com
      </a>.
    </p>
  </main>
</Layout>
