---
import { plans } from "../data/plans";

// âœ… Inline SVG for checkmark (instead of lucide-react)
const CheckIcon = `
  <svg class="w-5 h-5 text-green-400 mr-3 flex-shrink-0" 
       fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
          d="M5 13l4 4L19 7"></path>
  </svg>
`;
---

<section id="plans" class="relative py-24 bg-gray-900 overflow-hidden">
  <div class="container mx-auto max-w-7xl px-4 text-center relative z-10">
    <h2 class="text-4xl font-extrabold mb-4 text-white tracking-wide-heading">
      Our Plans
    </h2>
    <div class="w-20 h-1 bg-gradient-to-r from-green-500 to-green-600 mx-auto mb-10 rounded-full"></div>
    <p class="text-gray-300 mb-12 max-w-3xl mx-auto text-lg">
      ðŸŽ‰ Year-End Sale: Get <span class="font-semibold text-green-400">Flat 50% OFF</span> on all plans & services.
    </p>

    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {plans.map((plan, i) => {
        const isProfessional = plan.name === "Professional";
        return (
          <div
            class:list={[
              "plan-card group relative bg-gray-800/50 backdrop-blur-xl border border-white/10 p-8 rounded-2xl shadow-lg flex flex-col justify-between",
              { "is-popular": isProfessional }
            ]}
            data-aos="fade-up"
            data-aos-delay={i * 100}
          >
            <span class="absolute -top-3 right-4 bg-red-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md">
              50% OFF
            </span>
            {isProfessional && (
              <span class="absolute -top-3 left-4 bg-gradient-to-r from-green-500 to-green-600 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md">
                Best Value
              </span>
            )}

            <h3 class="text-2xl font-semibold mb-2 text-white group-hover:text-green-400 transition-colors">
              {plan.name}
            </h3>

            {plan.originalPrice ? (
              <div class="my-4">
                <p class="text-lg text-gray-500 line-through">{plan.originalPrice}</p>
                <p class="text-4xl font-bold text-green-400">{plan.price}</p>
              </div>
            ) : (
              <p class="text-2xl font-bold text-green-400 my-4">{plan.price}</p>
            )}

            <ul class="text-gray-300 space-y-3 mb-6 text-left">
              {plan.features.map(feature => (
                <li class="flex items-start">
                  <Fragment set:html={CheckIcon} />
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <p class="text-sm italic text-gray-500 mb-6">{plan.note}</p>

            <a 
              href="#contact"
              class="inline-block mt-auto px-6 py-3 rounded-xl bg-gradient-to-r from-green-500 to-green-600 text-black font-semibold shadow-md hover:shadow-lg hover:shadow-green-500/30 hover:scale-105 transition"
            >
              Get Started
            </a>
          </div>
        );
      })}
    </div>
  </div>

  <style>
    .plan-card {
      transition: all 0.3s ease;
    }
    .plan-card:hover {
      transform: scale(1.05);
      border-color: rgba(52, 211, 153, 0.5);
    }
    .is-popular {
      border: 2px solid #34D399;
      box-shadow: 0 0 25px rgba(52, 211, 153, 0.3);
    }
  </style>

  <script type="module" src="../scripts/aos.js"></script>
</section>
