---
import { plans } from "../data/plans";
const CheckIcon = `<svg class="w-5 h-5 text-primary-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>`;
---

<section id="plans" class="relative py-24 bg-gradient-to-b from-white to-primary-50 dark:from-dark-900 dark:to-dark-800">
  <div class="container mx-auto max-w-7xl px-6 text-center relative z-10">
    
    <!-- Section Title -->
    <h2 class="font-heading text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
      Our Plans
    </h2>
    <div class="w-20 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto mb-10 rounded-full"></div>

    <p class="text-lg text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
      ðŸŽ‰ Limited Offer: <span class="font-semibold text-primary-600 dark:text-primary-400">Flat 50% OFF</span> on all plans & services.
    </p>

    <!-- Plans Grid -->
    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {plans.map((plan, i) => {
        const isProfessional = plan.name === "Professional";
        return (
          <div
            class:list={[
              "group relative bg-white/40 dark:bg-dark-800/50 backdrop-blur-md border border-white/20 rounded-2xl shadow-soft p-8 flex flex-col transition hover:shadow-glass hover:-translate-y-2",
              { "is-popular": isProfessional }
            ]}
            data-aos="fade-up"
            data-aos-delay={i * 100}
          >
            <!-- Badges -->
            <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 flex gap-2">
              <span class="bg-red-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md">
                50% OFF
              </span>
              {isProfessional && (
                <span class="bg-gradient-to-r from-primary-500 to-secondary-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md">
                  Most Popular
                </span>
              )}
            </div>

            <!-- Title -->
            <h3 class="font-heading text-2xl font-semibold mb-4 text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition">
              {plan.name}
            </h3>

            <!-- Pricing -->
            {plan.originalPrice ? (
              <div class="my-4">
                <p class="text-lg text-gray-500 line-through">{plan.originalPrice}</p>
                <p class="text-4xl font-extrabold text-primary-600 dark:text-primary-400">{plan.price}</p>
              </div>
            ) : (
              <p class="text-3xl font-extrabold text-primary-600 dark:text-primary-400 my-4">{plan.price}</p>
            )}

            <!-- Features -->
            <ul class="text-gray-600 dark:text-gray-300 space-y-3 mb-6 text-left">
              {plan.features.map(feature => (
                <li class="flex items-start">
                  <Fragment set:html={CheckIcon} />
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <!-- Note -->
            {plan.note && <p class="text-sm italic text-gray-500 mb-6">{plan.note}</p>}

            <!-- CTA -->
            <a 
              href="#contact"
              class="mt-auto px-6 py-3 rounded-xl bg-primary-600 text-white font-semibold shadow-soft hover:shadow-glass hover:scale-105 transition"
            >
              Get Started
            </a>
          </div>
        );
      })}
    </div>
  </div>

  <style>
    .is-popular {
      border: 2px solid var(--tw-color-primary-500, #22c55e);
      box-shadow: 0 0 25px rgba(34, 197, 94, 0.25);
    }
  </style>

  <script type="module" src="../scripts/aos.js"></script>
</section>
