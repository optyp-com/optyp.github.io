---
import { plans } from "../data/plans";
---

<section id="plans" class="relative py-20 lg:py-28 bg-gradient-to-b from-black via-gray-900 to-black text-white">
  <div class="container mx-auto max-w-6xl px-6 sm:px-10 text-center relative z-10">
    
    <!-- Section Heading -->
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold mb-4 text-white">
      Our <span class="text-teal-400">Plans</span>
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-teal-400 to-green-500 mx-auto mb-10 rounded-full shadow-lg"></div>
    <p class="text-gray-300 mb-12 max-w-3xl mx-auto">
      Choose the plan that fits your career goals best — from job seekers to freelancers and personal branding.
    </p>

    <!-- Plans Grid -->
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {plans.map((plan) => (
        <div
          key={plan.name}
          class="plan-card group relative p-8 rounded-2xl transition-all duration-300 
                 bg-white/5 border border-white/10 backdrop-blur-lg 
                 hover:border-teal-400/60 hover:shadow-[0_0_25px_rgba(0,255,204,0.4)] 
                 hover:scale-105 flex flex-col"
        >
          <!-- Title -->
          <h3 class="text-xl font-semibold mb-4 text-white group-hover:text-teal-300 transition-colors">
            {plan.name}
          </h3>

          <!-- Price -->
          {plan.price !== "Flexible" ? (
            <p class="mb-6 text-lg">
              <span class="line-through text-sm text-gray-400 mr-2">{plan.originalPrice}</span>
              <span class="text-2xl font-bold text-white">{plan.price}</span>
            </p>
          ) : (
            <p class="mb-6 text-lg text-teal-300 font-bold">{plan.price}</p>
          )}

          <!-- Features -->
          {plan.name === "Individual Services" ? (
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mt-6 text-left">
              {plan.features.map((feature) => (
                <div class="flex items-start bg-white/5 rounded-lg px-3 py-2 hover:bg-white/10 transition">
                  <svg class="w-5 h-5 text-teal-400 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm">
                    {feature.name} →
                    <span class="line-through text-xs text-gray-500 ml-1">{feature.oldPrice}</span>
                    <span class="text-white font-semibold ml-2">{feature.newPrice}</span>
                  </span>
                </div>
              ))}
            </div>
          ) : (
            <ul class="text-left mt-6 space-y-2 text-gray-300 text-sm">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-teal-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>
  </div>

  <style>
    .plan-card {
      transition: all 0.3s ease;
    }
    @media (max-width: 640px) {
      .plan-card {
        padding: 1.5rem;
      }
      .plan-card h3 {
        font-size: 1.125rem;
      }
    }
  </style>
</section>
