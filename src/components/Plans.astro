---
import { plans } from "../data/plans";
---

<section id="plans" class="relative py-20 px-6 bg-gradient-to-br from-black via-gray-900 to-black text-white">
  <div class="container mx-auto max-w-7xl text-center">
    
    <!-- Section Heading -->
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold mb-4 text-white">
      Choose Your <span class="text-teal-400">Plan</span>
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-teal-400 to-teal-600 mx-auto mb-12 rounded-full shadow"></div>
    <p class="text-gray-300 mb-12 max-w-2xl mx-auto text-lg">
      Select the plan that best suits your career journey. 
      All plans are optimized for <span class="text-teal-300 font-semibold">maximum visibility</span> and results.
    </p>

    <!-- Responsive Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {plans.map((plan, index) => (
        <div 
          class={`glass-card relative rounded-2xl p-8 flex flex-col justify-between hover:scale-105 transition-transform duration-300 shadow-xl ${
            index === 1 ? "border-2 border-teal-400 shadow-teal-500/30" : ""
          }`}
        >
          <!-- Most Popular Badge -->
          {index === 1 && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 bg-teal-500 text-black text-xs font-bold px-3 py-1 rounded-full shadow-lg tracking-wide uppercase">
              Most Popular
            </span>
          )}

          <div>
            <h3 class="text-2xl font-bold text-teal-300 mb-4">{plan.name}</h3>

            <!-- Price -->
            <div class="mb-4">
              {plan.originalPrice && (
                <p class="text-sm text-gray-500 mb-1 line-through">{plan.originalPrice}</p>
              )}
              <p class="text-3xl font-extrabold text-white">{plan.price}</p>
            </div>

            <!-- Features -->
            <ul class="text-left mt-6 space-y-2 text-gray-300 text-sm">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-teal-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="mt-8">
            <a 
              href="#contact" 
              class={`inline-block w-full py-3 rounded-xl font-semibold transition duration-300 shadow-lg ${
                index === 1 
                  ? "bg-gradient-to-r from-teal-500 to-teal-600 text-black hover:from-teal-400 hover:to-teal-500" 
                  : "bg-gradient-to-r from-gray-800 to-gray-700 text-white hover:from-teal-500 hover:to-teal-600 hover:text-black"
              }`}
            >
              {index === 1 ? "Get Started Now" : "Choose Plan"}
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>

  <style>
    .glass-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      transition: all 0.3s ease;
    }
    .glass-card:hover {
      border-color: rgba(20, 255, 204, 0.4);
      box-shadow: 0 0 20px rgba(20, 255, 204, 0.2);
    }
  </style>
</section>
