---
import { plans } from "../data/plans";
import { Check } from "lucide-react"; // if using Lucide for consistent icons
---

<section id="plans" class="relative py-24 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
  <div class="container mx-auto max-w-7xl px-4 text-center relative z-10">
    <!-- Heading -->
    <h2 class="text-4xl sm:text-5xl font-extrabold mb-4 text-white tracking-wide-heading animate-fadeInUp">
      Our Plans
    </h2>
    <div class="w-20 h-1 bg-gradient-to-r from-primary-500 to-primary-700 mx-auto mb-10 rounded-full"></div>
    <p class="text-gray-300 mb-12 max-w-3xl mx-auto text-lg animate-fadeInUp">
      ðŸŽ‰ Year-End Sale: Get <span class="font-semibold text-primary-400">Flat 50% OFF</span> on all plans & services.
    </p>

    <!-- Pricing Grid -->
    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {plans.map((plan, i) => {
        const isProfessional = plan.name === "Professional";
        return (
          <div
            class:list={[
              "group relative bg-glass-gradient backdrop-blur-lg border border-white/20 p-8 rounded-2xl shadow-glass flex flex-col justify-between transition-all duration-300 animate-fadeInUp hover:scale-105 hover:shadow-glow",
              { "is-popular": isProfessional }
            ]}
            style={{ animationDelay: `${i * 0.15}s` }}
          >
            <!-- Ribbons -->
            <span class="absolute -top-3 right-4 bg-red-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md animate-fadeInUp">
              50% OFF
            </span>
            {isProfessional && (
              <span class="absolute -top-3 left-4 bg-gradient-to-r from-primary-500 to-primary-600 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md animate-fadeInUp">
                Best Value
              </span>
            )}

            <!-- Plan Name -->
            <h3 class="text-2xl font-semibold mb-4 text-white group-hover:text-primary-400 transition-colors">
              {plan.name}
            </h3>

            <!-- Price -->
            {plan.originalPrice ? (
              <div class="my-6">
                <p class="text-lg text-gray-500 line-through">{plan.originalPrice}</p>
                <p class="text-4xl font-bold text-primary-400">{plan.price}</p>
              </div>
            ) : (
              <p class="text-3xl font-bold text-primary-400 my-6">{plan.price}</p>
            )}

            <!-- Features -->
            <ul class="text-gray-300 space-y-3 mb-6 text-left">
              {plan.features.map(feature => (
                <li class="flex items-start">
                  <Check class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" />
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <!-- Note -->
            <p class="text-sm italic text-gray-500 mb-6">{plan.note}</p>

            <!-- CTA -->
            <a 
              href="#contact"
              class="inline-block mt-auto px-6 py-3 rounded-xl bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold shadow-md hover:shadow-lg hover:shadow-primary-500/30 hover:scale-105 transition"
            >
              Get Started
            </a>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  .is-popular {
    border: 2px solid #34D399;
    box-shadow: 0 0 25px rgba(52, 211, 153, 0.3);
  }
</style>
