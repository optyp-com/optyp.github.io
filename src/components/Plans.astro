---
import { plans } from "../data/plans";
---

<section id="plans" class="py-20 bg-gradient-to-br from-black via-gray-900 to-black text-white">
  <div class="container mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-extrabold mb-4">Choose Your Plan</h2>
      <p class="text-lg text-gray-400">Flexible options tailored to your career goals</p>
      <div class="w-20 h-1 bg-gradient-to-r from-teal-400 to-green-500 mx-auto mt-6 rounded-full"></div>
    </div>

    <!-- Top 3 Plans -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {plans.slice(0, 3).map((plan, idx) => (
        <div class={`glass-box rounded-xl p-8 flex flex-col justify-between hover:scale-105 transition duration-300 shadow-lg relative ${idx === 2 ? "border border-teal-400" : ""}`}>
          {idx === 2 && (
            <span class="absolute top-4 right-4 bg-teal-500 text-black text-xs font-bold px-3 py-1 rounded-full shadow-md">
              Best Value
            </span>
          )}
          <div>
            <h3 class="text-2xl font-bold text-teal-300 mb-4">{plan.name}</h3>
            <ul class="space-y-3 mb-6 text-gray-300">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-teal-400 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-6">
            <p class="text-gray-400 text-sm line-through">{plan.originalPrice}</p>
            <p class="text-2xl font-extrabold text-white">{plan.price}</p>
            <button class="mt-6 w-full bg-teal-500 hover:bg-teal-400 text-black font-semibold py-3 rounded-lg shadow-md transition duration-300">
              Get Started
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Individual Services (Full Width) -->
    <div class="glass-box rounded-xl p-8">
      <h3 class="text-2xl font-bold text-teal-300 mb-6 text-center">Individual Services</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {plans[3].features.map((service) => (
          <div class="flex flex-col bg-black/30 p-4 rounded-lg border border-white/10 hover:border-teal-400 transition">
            <span class="text-gray-200 font-medium">{service.name}</span>
            <div class="mt-2 text-sm">
              <span class="line-through text-gray-500">{service.oldPrice}</span>
              <span class="ml-2 text-teal-400 font-semibold">{service.newPrice}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <style>
    .glass-box {
      background: rgba(255,255,255,0.04);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 1rem;
      backdrop-filter: blur(12px);
      box-shadow: 0 8px 32px rgba(0,0,0,0.6);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .glass-box:hover {
      box-shadow: 0 12px 36px rgba(0,0,0,0.8);
    }
  </style>
</section>
