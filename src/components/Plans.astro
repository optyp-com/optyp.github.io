<section id="plans" class="relative py-20 bg-gradient-to-b from-black via-gray-900 to-black text-white overflow-hidden">
  <!-- Background Neon Glow -->
  <div class="absolute -top-20 left-10 w-[350px] h-[350px] bg-green-500/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-10 w-[400px] h-[400px] bg-emerald-400/20 rounded-full blur-3xl"></div>

  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-14" data-aos="fade-up">
      <h2 class="text-3xl md:text-5xl font-bold">
        Our <span class="bg-gradient-to-r from-emerald-400 to-green-500 bg-clip-text text-transparent">Plans</span>
      </h2>
      <p class="mt-4 text-gray-300 max-w-2xl mx-auto">
        Choose a plan tailored to your professional journey. Whether you’re starting out or scaling up, we’ve got you covered.
      </p>
    </div>

    <!-- Pricing Grid -->
    <div class="grid gap-8 md:grid-cols-3">
      
      <!-- Basic Plan -->
      <div class="group p-8 rounded-2xl bg-white/5 backdrop-blur-lg border border-white/10 shadow-lg 
                  hover:shadow-emerald-500/30 hover:scale-105 transition duration-300 flex flex-col"
           data-aos="fade-up" data-aos-delay="100">
        <h3 class="text-xl font-semibold mb-2">Freelancer</h3>
        <p class="text-gray-400 mb-6">For individuals getting started</p>
        <div class="text-3xl font-bold mb-6">
          ₹999 <span class="text-base text-gray-400">/one-time</span>
        </div>
        <ul class="space-y-3 text-gray-300 text-sm flex-1">
          <li>✔ CV Optimization</li>
          <li>✔ LinkedIn Review</li>
          <li>✔ Basic Formatting</li>
        </ul>
        <a href="#" class="mt-8 px-6 py-3 rounded-xl font-semibold bg-gradient-to-r from-emerald-400 to-green-500 text-black shadow-lg hover:shadow-green-500/40 transition-transform transform hover:scale-105 text-center">
          Subscribe
        </a>
      </div>

      <!-- Pro Plan (Highlighted) -->
      <div class="group relative p-8 rounded-2xl bg-white/10 backdrop-blur-xl border border-emerald-400/40 shadow-xl 
                  hover:shadow-emerald-500/50 hover:scale-105 transition duration-300 flex flex-col"
           data-aos="fade-up" data-aos-delay="200">
        <!-- Badge -->
        <span class="absolute -top-4 right-6 px-3 py-1 text-xs font-bold rounded-full bg-gradient-to-r from-emerald-400 to-green-500 text-black shadow-md">
          Popular
        </span>
        <h3 class="text-xl font-semibold mb-2">Professional</h3>
        <p class="text-gray-400 mb-6">Best for working professionals</p>
        <div class="text-3xl font-bold mb-6">
          ₹1,999 <span class="text-base text-gray-400">/one-time</span>
        </div>
        <ul class="space-y-3 text-gray-300 text-sm flex-1">
          <li>✔ Everything in Freelancer</li>
          <li>✔ Advanced CV + LinkedIn Boost</li>
          <li>✔ Modern ATS Formatting</li>
          <li>✔ 1 Interview Preparation Session</li>
        </ul>
        <a href="#" class="mt-8 px-6 py-3 rounded-xl font-semibold bg-gradient-to-r from-emerald-400 to-green-500 text-black shadow-lg hover:shadow-green-500/40 transition-transform transform hover:scale-105 text-center">
          Subscribe
        </a>
      </div>

      <!-- Elite Plan -->
      <div class="group p-8 rounded-2xl bg-white/5 backdrop-blur-lg border border-white/10 shadow-lg 
                  hover:shadow-emerald-500/30 hover:scale-105 transition duration-300 flex flex-col"
           data-aos="fade-up" data-aos-delay="300">
        <h3 class="text-xl font-semibold mb-2">Elite</h3>
        <p class="text-gray-400 mb-6">For ambitious leaders & global jobs</p>
        <div class="text-3xl font-bold mb-6">
          ₹4,999 <span class="text-base text-gray-400">/one-time</span>
        </div>
        <ul class="space-y-3 text-gray-300 text-sm flex-1">
          <li>✔ Everything in Professional</li>
          <li>✔ Personal Branding Strategy</li>
          <li>✔ Global Career Guidance</li>
          <li>✔ 2 Mock Interviews + Feedback</li>
          <li>✔ Priority Support</li>
        </ul>
        <a href="#" class="mt-8 px-6 py-3 rounded-xl font-semibold bg-gradient-to-r from-emerald-400 to-green-500 text-black shadow-lg hover:shadow-green-500/40 transition-transform transform hover:scale-105 text-center">
          Subscribe
        </a>
      </div>

    </div>
  </div>
</section>
