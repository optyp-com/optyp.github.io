---
import { useState } from "preact/hooks";
import ResultCard from "./ResultCard.astro";

const [result, setResult] = useState(null);
const [loading, setLoading] = useState(false);
const [error, setError] = useState("");
---

<div class="max-w-2xl mx-auto p-6 bg-white rounded-2xl shadow border border-gray-200">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">ðŸ“„ Resume Analyzer</h2>

  <form
    id="resumeForm"
    class="space-y-4"
    onSubmit={async (e) => {
      e.preventDefault();
      setError("");
      setResult(null);
      setLoading(true);

      const formData = new FormData(e.target);
      try {
        const res = await fetch("/api/resume-score", {
          method: "POST",
          body: formData,
        });
        const json = await res.json();
        if (json.success) {
          setResult(json.data);
        } else {
          setError(json.error || "Something went wrong");
        }
      } catch (err) {
        setError("Error connecting to AI service");
      } finally {
        setLoading(false);
      }
    }}
  >
    <div>
      <label class="block font-medium text-gray-700 mb-1">Upload Resume (PDF only)</label>
      <input
        type="file"
        name="resume"
        accept="application/pdf"
        required
        class="block w-full border border-gray-300 p-2 rounded-lg"
      />
    </div>

    <div>
      <label class="block font-medium text-gray-700 mb-1">Optional Job Description</label>
      <textarea
        name="jdText"
        placeholder="Paste the job description here (optional)"
        rows="4"
        class="block w-full border border-gray-300 p-2 rounded-lg"
      ></textarea>
    </div>

    <button
      type="submit"
      disabled={loading}
      class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 transition"
    >
      {loading ? "Analyzing..." : "Analyze Resume"}
    </button>

    {error && <p class="text-red-600 mt-2">{error}</p>}
  </form>

  {result && <ResultCard data={result} type="resume" />}
</div>
