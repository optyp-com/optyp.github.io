---
/* File: src/layouts/Layout.astro */
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <slot name="head" />
  </head>
  <body class="antialiased bg-white text-gray-900">
    <Header />
    <main class="pt-20">
      <slot />
    </main>

    <Footer />
    <Contact />

    <!-- Small sticky micro CTA -->
    <button onclick="openContactForm()" aria-label="Open contact"
            class="fixed right-6 bottom-6 z-50 btn-primary hidden md:flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
      <span>Contact</span>
    </button>

  </body>
</html>
