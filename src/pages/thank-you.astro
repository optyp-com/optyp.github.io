---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thank You | OPTYP</title>
  </head>
  <body class="bg-gray-50 font-body">
    <Header />

    <main class="flex flex-col items-center justify-center min-h-[70vh] text-center px-6">
      <div class="bg-white shadow-xl rounded-2xl p-10 max-w-lg">
        <div class="text-green-600 text-6xl mb-4">✔️</div>
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Thank You!</h1>
        <p class="text-gray-600 mb-8">
          Your message has been sent successfully. Our team at <span class="text-primary-500 font-semibold">OPTYP</span>
          will get back to you shortly.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#plans" class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg shadow hover:bg-primary-700 transition">
            View Our Services
          </a>
          <a href="/" class="inline-block bg-gray-700 text-white px-6 py-3 rounded-lg shadow hover:bg-gray-800 transition">
            Back to Home
          </a>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>
