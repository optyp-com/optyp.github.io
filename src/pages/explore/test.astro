---
import Layout from "../../layouts/Layout.astro";

const title = "LinkedIn Profile Optimization Service | OPTYP";
const description =
  "Professional LinkedIn Profile Optimization that boosts your visibility, delivers 132% more profile views, and helps you get 40x more job opportunities in 90 days.";
const keywords =
  "LinkedIn profile optimization, LinkedIn visibility, LinkedIn branding, recruiter engagement, LinkedIn SEO, job search LinkedIn, professional networking, LinkedIn headline, LinkedIn summary, LinkedIn rewrite service";
const canonical = "https://optyp.com/explore/linkedin";
const image = "/images/Linkedin-page6.jpg";
const provider = "OPTYP";
const price = "799";
const publishedDate = "2025-10-05";
const modifiedDate = "2025-10-05";
---

<!-- HEAD + SEO -->
<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="canonical" href={canonical} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />
  <meta property="og:image" content={image} />
  <meta property="og:site_name" content="OPTYP" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://optyp.com/#organization",
          "name": provider,
          "url": "https://optyp.com/",
          "logo": "https://optyp.com/images/logo.png"
        },
        {
          "@type": "Service",
          "@id": canonical + "#service",
          "serviceType": "LinkedIn Profile Optimization",
          "name": "LinkedIn Profile Optimization Service",
          "description": description,
          "provider": { "@id": "https://optyp.com/#organization" },
          "areaServed": "IN",
          "offers": {
            "@type": "Offer",
            "url": canonical,
            "priceCurrency": "INR",
            "price": price,
            "availability": "https://schema.org/InStock"
          },
          "datePublished": publishedDate,
          "dateModified": modifiedDate
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "How long does LinkedIn Optimization take?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Standard delivery is 48-72 hours with unlimited revisions for 30 days."
              }
            },
            {
              "@type": "Question",
              "name": "Will it increase my recruiter visibility?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Yes, our clients experience 132% more profile views and 2x recruiter engagement within 90 days."
              }
            },
            {
              "@type": "Question",
              "name": "Do you guarantee results?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "We provide a 30-day performance guarantee — if you don't see improvement, we refine until you do."
              }
            }
          ]
        }
      ]
    })}
  </script>

  <style>
    :root {
      --accent: #47c6a2;
      --glass-bg: rgba(255,255,255,0.05);
      --glass-border: rgba(255,255,255,0.1);
    }
    .glass-card {
      background: var(--glass-bg);
      border: 1px solid var(--glass-border);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: 1rem;
      transition: transform .3s, box-shadow .3s;
    }
    .glass-card:hover { transform: scale(1.02); box-shadow: 0 0 20px rgba(71,198,162,0.2); }
    .glass-btn {
      display:inline-block;
      background: rgba(71,198,162,0.15);
      border: 1px solid var(--accent);
      color:#fff;
      border-radius: .75rem;
      padding:.9rem 1.5rem;
      font-weight:600;
      backdrop-filter: blur(10px);
      transition:all .25s ease;
    }
    .glass-btn:hover {
      background: var(--accent);
      color:#050406;
      box-shadow:0 0 20px rgba(71,198,162,0.4);
      transform:scale(1.05);
    }
  </style>
</head>

<Layout title={title}>
  <!-- Breadcrumb -->
  <nav class="text-sm text-gray-400 mb-6 px-4 sm:px-6" aria-label="Breadcrumb">
    <a href="/" class="hover:text-[#47C6A2]">Home</a> › 
    <a href="/explore" class="hover:text-[#47C6A2]">Explore</a> › 
    <span class="text-white" aria-current="page">LinkedIn Profile Optimization</span>
  </nav>

  <!-- HERO -->
  <section class="text-center py-10 sm:py-14 px-4 sm:px-6" id="hero">
    <h1 class="text-4xl sm:text-5xl font-extrabold text-white mb-3">LinkedIn Profile Optimization Service</h1>
    <p class="text-base sm:text-lg text-gray-300 max-w-3xl mx-auto mb-5">
      Boost your visibility &amp; get <strong>40x more job opportunities</strong> — turn your LinkedIn into a recruiter magnet.
    </p>
    <p class="text-sm sm:text-base text-gray-400 max-w-2xl mx-auto mb-8">
      Delivering <strong>132% more profile views</strong> and <strong>2x interview calls</strong> in just 90 days.
    </p>
    <div class="relative max-w-4xl mx-auto mb-8">
      <img src={image} alt="LinkedIn Profile Optimization" 
           class="w-full max-h-96 object-cover rounded-2xl shadow-lg border border-white/10" 
           loading="lazy" decoding="async" />
      <div class="absolute inset-0 bg-black/30 rounded-2xl"></div>
    </div>
  </section>

  <!-- PROBLEM -->
  <section class="max-w-5xl mx-auto px-6 py-12 text-gray-300 leading-relaxed" id="problem">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-4">The Silent Career Killer You Can't See</h2>
    <p>97% of recruiters use LinkedIn to source talent. Bad or incomplete profiles are skipped in under 8 seconds.</p>
    <p class="mt-3">With 930 million professionals competing, your profile needs to stand out instantly—or disappear.</p>
    <h3 class="text-lg font-semibold text-white mt-6 mb-3">The Hidden Cost:</h3>
    <ul class="list-disc list-inside space-y-2">
      <li>Lost salary negotiations and slower promotions.</li>
      <li>Missed roles you're qualified for due to poor visibility.</li>
      <li>Weeks of extra job-search time and lost income.</li>
    </ul>
  </section>

  <!-- SOLUTION -->
  <section class="glass-card max-w-5xl mx-auto px-6 py-12 my-10" id="solution">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">The Solution: Strategic LinkedIn Optimization</h2>
    <ul class="grid sm:grid-cols-2 gap-4 text-gray-300 text-base">
      <li>✅ Keyword Integration - 80-90% match to target jobs</li>
      <li>✅ Compelling Headlines - recruiter-click worthy</li>
      <li>✅ Engaging Summaries - story-driven &amp; achievement-focused</li>
      <li>✅ Visual Branding - banner, photo &amp; color strategy</li>
      <li>✅ Skills Placement - 13x visibility improvement</li>
      <li>✅ Analytics &amp; Guidance - monthly performance tracking</li>
    </ul>
  </section>

  <!-- RESULTS -->
  <section class="glass-card max-w-5xl mx-auto px-6 py-12 my-10" id="results">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">What's In It For You: Measured Career Growth</h2>
    <div class="grid sm:grid-cols-3 gap-6 text-gray-200">
      <div>
        <h3 class="font-semibold text-lg">Visibility</h3>
        <ul class="list-disc list-inside mt-2 space-y-1">
          <li>132% more profile views</li>
          <li>40x more recruiter reach</li>
        </ul>
      </div>
      <div>
        <h3 class="font-semibold text-lg">Career Impact</h3>
        <ul class="list-disc list-inside mt-2 space-y-1">
          <li>4-6 weeks faster hiring</li>
          <li>50-80% more recruiter messages</li>
        </ul>
      </div>
      <div>
        <h3 class="font-semibold text-lg">Financial Return</h3>
        <ul class="list-disc list-inside mt-2 space-y-1">
          <li>Higher starting offers</li>
          <li>Access to hidden premium roles</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- INDUSTRIES -->
  <section class="glass-card max-w-5xl mx-auto px-6 py-12 my-10" id="industry">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">Industry-Specific Optimization</h2>
    <div class="grid sm:grid-cols-2 gap-6 text-gray-300">
      <div>
        <h3 class="font-semibold text-white">Technology</h3>
        <ul class="list-disc list-inside"><li>GitHub &amp; project linking</li><li>Certifications highlight</li></ul>
      </div>
      <div>
        <h3 class="font-semibold text-white">Sales &amp; Marketing</h3>
        <ul class="list-disc list-inside"><li>Revenue metrics</li><li>Client success proofs</li></ul>
      </div>
      <div>
        <h3 class="font-semibold text-white">Healthcare</h3>
        <ul class="list-disc list-inside"><li>Licenses &amp; training</li><li>Patient outcomes</li></ul>
      </div>
      <div>
        <h3 class="font-semibold text-white">Finance &amp; Consulting</h3>
        <ul class="list-disc list-inside"><li>Portfolio results</li><li>Market insights</li></ul>
      </div>
    </div>
  </section>

  <!-- RELATED -->
  <section class="glass-card max-w-5xl mx-auto px-6 py-12 my-10" id="related">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">Related Services</h2>
    <ul class="grid sm:grid-cols-2 gap-4 text-gray-300">
      <li><a href="/explore/ats-resume" class="hover:text-[#47C6A2]">ATS Resume Optimization</a></li>
      <li><a href="/explore/job-portals/naukri" class="hover:text-[#47C6A2]">Naukri Profile Optimization</a></li>
      <li><a href="/explore/job-portals/indeed" class="hover:text-[#47C6A2]">Indeed Optimization</a></li>
      <li><a href="/explore/portfolio-site" class="hover:text-[#47C6A2]">Portfolio Site Optimization</a></li>
    </ul>
  </section>

  <!-- CTA -->
  <section class="text-center py-14 px-4" id="cta">
    <h2 class="text-3xl font-bold text-white mb-4">Ready to Transform Your LinkedIn?</h2>
    <p class="text-gray-300 max-w-2xl mx-auto mb-6">Join 1,000+ professionals who gained visibility, recruiter trust, and better offers in just weeks.</p>
    <a href="/#contact" class="glass-btn text-lg font-semibold">Get Your LinkedIn Optimized Now</a>
    <p class="text-xs text-gray-400 mt-4">✓ 132% Profile View Increase · ✓ 48-72 hr Delivery · ✓ 30-Day Guarantee</p>
    <div class="mt-6">
      <a href="/faq#linkedin" class="glass-btn text-sm">View All FAQs</a>
    </div>
  </section>

  <!-- FOOTNOTE -->
  <footer class="max-w-5xl mx-auto px-6 py-6 text-xs text-gray-500">
    <p>Published: {publishedDate} • Updated: {modifiedDate}</p>
    <p class="mt-2">© {new Date().getFullYear()} OPTYP — Results may vary. All percentages represent average verified client improvements.</p>
  </footer>
</Layout>
