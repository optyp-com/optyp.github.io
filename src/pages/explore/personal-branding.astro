---
import Layout from "../../layouts/Layout.astro";
const title = "Personal Branding | OPTYP";
const description = "Transform your professional identity with OPTYP's Personal Branding Service — 300% higher visibility, 5× more high-value engagements, 2-week brand launch, and 6 months of support.";
const canonical = "https://yourdomain.com/explore/personal-branding";
const keywords = "personal branding, personal brand, personal brand strategy, LinkedIn optimization, thought leadership, personal website, PR outreach, brand identity, executive branding, career growth";
const imagePlaceholder = "/images/portfolio-page2.png"; // updated placeholder path per your request
const publishedDate = "2025-10-04";
const modifiedDate = "2025-10-04";
---
<!-- Page-level meta + JSON-LD -->
<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="canonical" href={canonical} />
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />
  <meta property="og:image" content={imagePlaceholder} />
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={imagePlaceholder} />

  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://yourdomain.com/#organization",
          "name": "OPTYPO",
          "url": "https://yourdomain.com/",
          "logo": "https://yourdomain.com/images/logo.png"
        },
        {
          "@type": "Service",
          "@id": canonical + "#service",
          "name": "Personal Branding Service",
          "description": "Strategic personal branding to increase visibility, credibility and high-value opportunities. Guaranteed 300% visibility increase, 2-week brand launch and 6 months of support.",
          "provider": { "@id": "https://yourdomain.com/#organization" },
          "areaServed": "Global",
          "url": canonical
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "How quickly will I see results?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "We launch your new brand in 2 weeks and provide measurable engagement improvements within 60 days with our 60-day performance guarantee on engagement metrics."
              }
            },
            {
              "@type": "Question",
              "name": "What does the 300% visibility guarantee mean?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "It means we commit to growing your tracked online visibility and mentions by 300% from baseline or we will provide unlimited strategy revisions until targets are met."
              }
            },
            {
              "@type": "Question",
              "name": "Do you offer ongoing support?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Yes — we include 6 months of ongoing brand management and optimization with every brand launch package."
              }
            }
          ]
        }
      ]
    })}
  </script>

  <style>
    /* Glassmorphism + button special effects + mobile friendly tweaks */
    :root{
      --glass-bg: rgba(255,255,255,0.04);
      --glass-border: rgba(255,255,255,0.08);
      --accent: #47C6A2;
      --accent-dark: #36a385;
      --btn-stroke: rgba(255,255,255,0.12);
    }
    .glass-card{
      background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
      border: 1px solid var(--glass-border);
      backdrop-filter: blur(8px) saturate(120%);
      -webkit-backdrop-filter: blur(8px) saturate(120%);
      border-radius: 14px;
    }
    .glass-btn{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      gap:0.6rem;
      background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
      border: 1px solid var(--btn-stroke);
      padding: 0.75rem 1.25rem;
      font-weight:700;
      border-radius: 12px;
      transition: transform .18s ease, box-shadow .18s ease;
      box-shadow: 0 6px 18px rgba(11,12,14,0.45);
      position: relative;
      overflow: hidden;
    }
    .glass-btn::after{
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(90deg, rgba(71,198,162,0.12), rgba(71,198,162,0));
      transform: translateX(-60%);
      transition: transform .5s ease;
      pointer-events: none;
    }
    .glass-btn:hover{
      transform: translateY(-4px);
      box-shadow: 0 12px 30px rgba(11,12,14,0.55);
      border-color: rgba(71,198,162,0.9);
    }
    .glass-btn:hover::after{
      transform: translateX(120%);
    }
    .glass-btn:focus{ outline: 3px solid rgba(71,198,162,0.12); outline-offset: 2px; }

    .cta-stroke{
      padding: 0.6rem 1.15rem;
      border-radius: 14px;
      border: 2px solid rgba(255,255,255,0.06);
      position: relative;
    }
    .cta-stroke::before{
      content: "";
      position: absolute;
      left: -2px;
      top: -2px;
      right: -2px;
      bottom: -2px;
      background: linear-gradient(90deg, rgba(71,198,162,0.12), rgba(71,198,162,0));
      border-radius: 16px;
      z-index:-1;
      filter: blur(10px);
      opacity:0;
      transition: opacity .2s ease;
    }
    .cta-stroke:hover::before{ opacity:1; }
    /* subtle glowing pulse */
    .pulse {
      animation: pulseGlow 3s infinite;
    }
    @keyframes pulseGlow {
      0% { box-shadow: 0 0 0 rgba(71,198,162,0.06); }
      50% { box-shadow: 0 6px 24px rgba(71,198,162,0.08); }
      100% { box-shadow: 0 0 0 rgba(71,198,162,0.06); }
    }
    /* Responsive tweaks */
    @media (max-width:640px){
      h1.section-hero { font-size: 1.6rem; }
      .max-w-4xl { padding-left: 1rem; padding-right: 1rem; }
      .grid-cols-2-mobile{ grid-template-columns: 1fr; }
      .two-col { grid-template-columns: 1fr; gap: 1rem; }
    }
  </style>
</head>

