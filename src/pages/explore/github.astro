---
import Layout from "../../layouts/Layout.astro";

const title = "GitHub Optimization Service | OPTYP";
const description =
  "GitHub Profile Optimization Service — turn your code portfolio into a recruiter magnet. Gain 300% more visibility, 2× recruiter engagement, and land developer roles faster.";
const keywords =
  "GitHub optimization, developer branding, code portfolio, recruiter engagement, GitHub profile optimization, software developer portfolio, GitHub README, career optimization, open source profile";
const canonical = "https://optyp.com/explore/github";
const image = "/images/git6.jpg";
const price = "999";
const provider = "OPTYP";
const publishedDate = "2025-10-05";
const modifiedDate = "2025-10-05";
---

<!-- ✅ HEAD + SEO -->
<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="canonical" href={canonical} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />
  <meta property="og:image" content={image} />
  <meta property="og:site_name" content="OPTYP" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <!-- JSON-LD Schema -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://optyp.com/#organization",
          "name": provider,
          "url": "https://optyp.com/",
          "logo": "https://optyp.com/images/logo.png"
        },
        {
          "@type": "Service",
          "@id": canonical + "#service",
          "serviceType": "GitHub Profile Optimization",
          "name": "GitHub Optimization Service",
          "description": description,
          "provider": { "@id": "https://optyp.com/#organization" },
          "areaServed": "IN",
          "offers": {
            "@type": "Offer",
            "url": canonical,
            "priceCurrency": "INR",
            "price": price,
            "availability": "https://schema.org/InStock"
          },
          "datePublished": publishedDate,
          "dateModified": modifiedDate
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "What does GitHub Optimization include?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "It includes optimizing your profile README, curating repositories, improving documentation, contribution graph consistency, and boosting recruiter engagement visibility."
              }
            },
            {
              "@type": "Question",
              "name": "How soon will I see results?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Most clients see measurable engagement improvements within 2–4 weeks."
              }
            },
            {
              "@type": "Question",
              "name": "Is this only for developers?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "It’s ideal for developers, data scientists, and engineers — anyone showcasing technical projects or portfolios on GitHub."
              }
            }
          ]
        }
      ]
    })}
  </script>

  <style>
    :root {
      --accent: #47c6a2;
      --glass-bg: rgba(255,255,255,0.05);
      --glass-border: rgba(255,255,255,0.1);
    }
    .glass {
      background: var(--glass-bg);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid var(--glass-border);
      border-radius: 1rem;
      box-shadow: 0 8px 32px rgba(0,0,0,0.3);
    }
    .glass-card {
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 1rem;
      transition: all 0.3s ease-in-out;
    }
    .glass-card:hover {
      transform: scale(1.02);
      box-shadow: 0 0 25px rgba(71,198,162,0.2);
    }
    .glass-btn {
      display: inline-block;
      background: rgba(71,198,162,0.15);
      border: 1px solid var(--accent);
      color: #fff;
      border-radius: 9999px;
      padding: 0.9rem 1.8rem;
      font-weight: 600;
      transition: all 0.25s ease;
      backdrop-filter: blur(10px);
    }
    .glass-btn:hover {
      background: var(--accent);
      color: #050406;
      transform: scale(1.05);
      box-shadow: 0 0 25px rgba(71,198,162,0.4);
    }
  </style>
</head>

<Layout title={title}>
  <!-- Breadcrumb -->
  <nav class="text-sm text-gray-400 mb-6 px-4 sm:px-6" aria-label="Breadcrumb">
    <a href="/" class="hover:text-[#47C6A2]">Home</a> › 
    <a href="/explore" class="hover:text-[#47C6A2]">Explore</a> › 
    <span class="text-white" aria-current="page">GitHub Optimization</span>
  </nav>

  <!-- HERO -->
  <section class="text-center py-12 px-4 sm:px-6" id="hero">
    <h1 class="text-3xl sm:text-5xl font-extrabold text-white mb-4">GitHub Profile Optimization</h1>
    <p class="text-base sm:text-lg text-gray-300 max-w-2xl mx-auto mb-8">
      Transform your code portfolio into a recruiter magnet — gain 
      <strong class="text-[#47C6A2]">300% more visibility</strong>, 
      <strong class="text-[#47C6A2]">2× recruiter engagement</strong>,
      and land developer roles faster.
    </p>
    <div class="relative max-w-4xl mx-auto mb-8">
      <img src={image} alt="GitHub Optimization Service" class="w-full max-h-96 object-contain rounded-2xl shadow-xl border border-white/10" loading="lazy" decoding="async" />
      <div class="absolute inset-0 bg-black/30 rounded-2xl"></div>
    </div>
  </section>

  <!-- PROBLEM -->
  <section class="max-w-4xl mx-auto px-6 py-12 text-gray-300 space-y-5" id="problem">
    <h2 class="text-2xl font-bold text-[#47C6A2]">The Career-Killing GitHub Mistake 87% of Developers Make</h2>
    <p>
      Your GitHub profile could be costing you opportunities. Recruiters spend less than 
      <strong>6 seconds</strong> reviewing your work before moving on.
    </p>
    <p>
      <strong>87% of hiring managers</strong> check GitHub profiles — yet only 13% are optimized 
      to convert that attention into job interviews.
    </p>
  </section>

  <!-- PAIN -->
  <section class="glass max-w-4xl mx-auto px-6 py-12 text-gray-300 my-10 rounded-2xl" id="pain">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-4">The Hidden Cost of an Invisible GitHub</h2>
    <p>You might be an amazing coder, but if recruiters can’t find or interpret your work, they’ll move on.</p>
    <ul class="list-disc list-inside mt-4 space-y-2">
      <li>Each unoptimized day = lost interviews and visibility.</li>
      <li>Active contributors get <strong>50% more job offers</strong>.</li>
      <li>Top-tier roles pay 30–50% more — only for visible developers.</li>
    </ul>
  </section>

  <!-- SOLUTION -->
  <section class="max-w-4xl mx-auto px-6 py-12 text-gray-300" id="solution">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">The Solution: Strategic GitHub Profile Optimization</h2>
    <ul class="space-y-3 text-base sm:text-lg">
      <li>✅ <strong>Profile README Rewrite</strong> – Impress in the first 6 seconds.</li>
      <li>✅ <strong>Repository Curation</strong> – Showcase only the best 6 projects.</li>
      <li>✅ <strong>Contribution Graph Strategy</strong> – Display consistent activity.</li>
      <li>✅ <strong>Project Documentation Polish</strong> – Make recruiters understand your impact.</li>
      <li>✅ <strong>Skills Tagging</strong> – 10× discoverability for tech stacks.</li>
      <li>✅ <strong>Open Source Coaching</strong> – Strategic contributions that get noticed.</li>
    </ul>
  </section>

  <!-- RESULTS -->
  <section class="glass max-w-4xl mx-auto px-6 py-12 text-gray-300 my-10 rounded-2xl" id="results">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">What’s In It For You: Measurable Career Acceleration</h2>
    <ul class="space-y-4">
      <li><strong>300% more profile visits</strong> and <strong>2× recruiter outreach</strong> in 30 days.</li>
      <li>Average <strong>40% faster interview conversions</strong> post-optimization.</li>
      <li><strong>30–50% higher salary offers</strong> for visible, credible profiles.</li>
    </ul>
  </section>

  <!-- PROOF -->
  <section class="max-w-4xl mx-auto px-6 py-12 text-gray-300" id="proof">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-6">Real Developer Results</h2>
    <blockquote class="border-l-4 border-[#47C6A2] pl-4 italic mb-4">
      “I received 3 recruiter DMs within 2 weeks after optimization.”  
      <span class="block text-sm text-gray-400">— Amit, Full-Stack Developer</span>
    </blockquote>
    <blockquote class="border-l-4 border-[#47C6A2] pl-4 italic">
      “Landed a remote role with 40% higher pay through GitHub.”  
      <span class="block text-sm text-gray-400">— Sana, Cloud Engineer</span>
    </blockquote>
  </section>

  <!-- RELATED -->
  <section class="glass max-w-4xl mx-auto px-6 py-12 my-10 rounded-2xl" id="related">
    <h3 class="text-2xl font-bold text-[#47C6A2] mb-6">Related Services</h3>
    <ul class="space-y-2 text-base sm:text-lg text-gray-300">
      <li><a href="/explore/linkedin" class="hover:text-[#47C6A2]">LinkedIn Optimization</a></li>
      <li><a href="/explore/portfolio-site" class="hover:text-[#47C6A2]">Portfolio Website Optimization</a></li>
      <li><a href="/explore/freelancing/upwork" class="hover:text-[#47C6A2]">Upwork Optimization</a></li>
      <li><a href="/explore/freelancing/fiverr" class="hover:text-[#47C6A2]">Fiverr Optimization</a></li>
    </ul>
  </section>

  <!-- CTA -->
  <section class="text-center py-14 px-4" id="cta">
    <h2 class="text-3xl font-bold text-white mb-3">Ready to Elevate Your Developer Brand?</h2>
    <p class="text-gray-300 mb-6">Join 3,000+ developers who landed better roles after optimizing their GitHub profiles.</p>
    <a href="/#contact" class="glass-btn text-lg">Get Your GitHub Optimized Now</a>
    <p class="text-xs text-gray-400 mt-4">✓ 300% Visibility Boost • ✓ 48–72 hr Delivery • ✓ Guaranteed Improvement</p>
  </section>

  <!-- FOOTER -->
  <footer class="max-w-4xl mx-auto px-6 py-6 text-xs text-gray-500">
    <p>Published: {publishedDate} • Updated: {modifiedDate}</p>
    <p class="mt-2">© {new Date().getFullYear()} OPTYP — Verified developer growth data. All improvements reflect real average client metrics.</p>
  </footer>
</Layout>
