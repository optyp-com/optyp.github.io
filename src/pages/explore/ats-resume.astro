---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";

// Page-specific SEO values (edit if you want custom values)
const pageTitle = "ATS Resume Optimization Service | OPTYP";
const pageDescription = "ATS Resume Optimization Service to land more interviews. Beat Applicant Tracking Systems (ATS), pass recruiter filters, and get hired faster with keyword-rich, recruiter-friendly resumes. Starting at ‚Çπ299.";
const pageKeywords = "ATS resume optimization, resume writing service, job search help, beat ATS, resume keywords, resume formatting, professional resume service, resume for interview, resume upgrade service";
const pageImage = "/images/services/ats-resume-hero.jpg" || "/images/about-resume.svg"; // replace with your preferred OG image path
const canonicalUrl = `${Astro.site?.origin || ""}/explore/ats-resume`;
const priceNumeric = 299;
const currency = "INR";
const providerName = "OPTYP";

/*
  Notes:
  - SEO is injected via the SEO component below.
  - I preserved your page content and scripts; added minor accessibility + lazy-loading for the image.
  - I added the missing #sticky-cta element so the script doesn't error.
*/
---

<Layout title={pageTitle}>

  <!-- Inject full SEO head (meta tags, OG, Twitter card, JSON-LD) -->
  <SEO
    title={pageTitle}
    description={pageDescription}
    keywords={pageKeywords}
    image={pageImage}
    url={canonicalUrl}
    type="service"
    author={providerName}
    publishedDate={new Date().toISOString()}
  />

  <!-- Breadcrumb -->
  <nav class="text-xs sm:text-sm text-gray-400 mb-4 sm:mb-6 px-4" aria-label="Breadcrumb">
    <a href="/" class="hover:text-[#47C6A2]">Home</a> ‚Ä∫ 
    <a href="/explore" class="hover:text-[#47C6A2]">Explore</a> ‚Ä∫ 
    <span class="text-white" aria-current="page">ATS Resume Optimization</span>
  </nav>

  <!-- Hero Section -->
  <section class="text-center px-4 py-8 sm:py-12" id="hero">
    <h1 class="text-2xl sm:text-4xl md:text-5xl font-extrabold text-white mb-4">
      ATS Resume to Land More Interviews 
    </h1>
    <p class="text-base sm:text-lg text-gray-300 max-w-xl mx-auto">
      Get past automated filters and increase your chances of landing <span class="text-[#47C6A2] font-semibold">67% more interviews</span>.  
      Transform your resume into an ATS-friendly, recruiter-ready document.
    </p>

    <!-- Hero Image (lazy load + alt kept) -->
    <div class="mt-6 sm:mt-8">
      <img
        src="/images/about-resume.svg"
        alt="ATS Resume Optimization Service"
        class="rounded-xl shadow-lg mx-auto w-full max-w-md sm:max-w-2xl border border-white/10"
        loading="lazy"
        decoding="async"
      />
    </div>
  </section>

  <!-- The Problem -->
  <section class="max-w-5xl mx-auto px-4 sm:px-6 py-8 sm:py-12 text-gray-300" id="problem">
    <h2 class="text-xl sm:text-2xl font-bold text-[#47C6A2] mb-4 sm:mb-6">Why Most Resumes Fail ATS Screening</h2>
    <p class="mb-4">
