---
import Layout from "../../layouts/Layout.astro";

const pageTitle = "ATS Resume Optimization Service | OPTYP";
const pageDescription = "ATS Resume Optimization Service to land more interviews. Beat Applicant Tracking Systems (ATS), pass recruiter filters, and get hired faster with keyword-rich, recruiter-friendly resumes. Starting at ‚Çπ299.";
const pageKeywords = "ATS resume optimization, resume writing service, job search help, beat ATS, resume keywords, resume formatting, professional resume service, resume for interview, resume upgrade service";
const pageImage = "/images/services/ats-resume-hero.jpg";
const canonicalUrl = "https://optyp.com/explore/ats-resume";
const priceNumeric = 299;
const currency = "INR";
const providerName = "OPTYP";
const publishedDate = "2025-10-05";
const modifiedDate = "2025-10-05";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "ATS Resume Optimization",
  name: "ATS Resume Optimization Service",
  description:
    "Make your resume pass ATS filters and land more interviews with keyword-rich, recruiter-friendly resumes.",
  provider: {
    "@type": "Organization",
    name: providerName,
    url: "https://optyp.com",
  },
  areaServed: "IN",
  offers: {
    "@type": "Offer",
    url: canonicalUrl,
    priceCurrency: currency,
    price: String(priceNumeric),
    availability: "https://schema.org/InStock",
  },
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage={pageImage}
  jsonLd={jsonLd}
>
  <!-- Breadcrumb -->
