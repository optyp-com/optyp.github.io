    <div class="grid sm:grid-cols-2 gap-6">
      <div>
        <h3 class="font-semibold text-white mb-2">Keyword Research</h3>
        <ul class="list-disc list-inside">
          <li>Analyze 50+ job postings</li>
          <li>Primary + long-tail variations</li>
        </ul>
      </div>
      <div>
        <h3 class="font-semibold text-white mb-2">Resume Content</h3>
        <ul class="list-disc list-inside">
          <li>Quantified achievements</li>
          <li>Professional summaries that sell</li>
        </ul>
      </div>
      <div>
        <h3 class="font-semibold text-white mb-2">Technical Optimization</h3>
        <ul class="list-disc list-inside">
          <li>ATS-approved fonts & layouts</li>
          <li>Clean one-column structure</li>
        </ul>
      </div>
      <div>
        <h3 class="font-semibold text-white mb-2">Guarantee</h3>
        <ul class="list-disc list-inside">
          <li>90+ ATS score or free revision</li>
          <li>48‚Äì72 hour delivery</li>
        </ul>
      </div>
    </div>
  </section>


  <!-- Related -->
  <section class="glass max-w-5xl mx-auto px-6 py-10 text-gray-300 rounded-xl" id="related">
    <h2 class="text-2xl font-bold text-[#47C6A2] mb-4">Related Career Services</h2>
    <ul class="space-y-2">
      <li><a href="/explore/linkedin" class="hover:text-[#47C6A2]">LinkedIn Profile Optimization</a></li>
      <li><a href="/explore/naukri" class="hover:text-[#47C6A2]">Naukri Profile Optimization</a></li>
      <li><a href="/explore/github" class="hover:text-[#47C6A2]">GitHub Optimization</a></li>
      <li><a href="/explore/portfolio-site" class="hover:text-[#47C6A2]">Portfolio Optimization</a></li>
    </ul>
  </section>

  <!-- Final CTA -->
  <section class="text-center py-12" id="final-cta">
    <h2 class="text-3xl font-bold text-white mb-4">Ready to End Your Job Search Struggles?</h2>
    <p class="text-gray-300 mb-6 max-w-xl mx-auto">
      Join the 67% of professionals landing more interviews with ATS-optimized resumes.  
      <strong>Being qualified isn‚Äôt enough‚Äîyou need to be found.</strong>
    </p>
    <a href="/#contact" class="glass-btn border border-[#47C6A2] px-8 py-4 rounded-lg font-semibold hover:scale-105 transition">
      Get Started Today
    </a>
    <ul class="mt-6 text-gray-400 text-sm space-y-1 max-w-md mx-auto">
      <li>‚úì 90+ ATS Score Guarantee</li>
      <li>‚úì 48-Hour Delivery</li>
      <li>‚úì Unlimited Revisions</li>
      <li>‚úì Certified Resume Writers</li>
    </ul>
  </section>

  <!-- Like & Share -->
  <section class="text-center py-10">
    <p class="text-gray-400 mb-3">Was this page helpful?</p>
    <div class="flex justify-center gap-3">
      <button id="like-yes" class="px-4 py-2 bg-white/10 rounded-lg hover:bg-[#47C6A2]/20">üëç Yes</button>
      <button id="like-no" class="px-4 py-2 bg-white/10 rounded-lg hover:bg-red-400/20">üëé No</button>
    </div>
  </section>

  <!-- Floating Sticky CTA -->
  <a id="sticky-cta" href="/#contact"
     class="fixed right-6 bottom-6 z-50 rounded-2xl p-3 px-4 backdrop-blur bg-white/8 border border-white/10 shadow-lg flex items-center gap-3 hover:scale-105 transition">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
    </svg>
    <span class="font-medium">Get Started</span>
  </a>

  <!-- Scripts -->
  <script>
    document.getElementById('like-yes')?.addEventListener('click', function() {
      this.textContent = 'Thanks! üëç';
      this.classList.add('bg-[#47C6A2]/20');
    });
    document.getElementById('like-no')?.addEventListener('click', function() {
      this.textContent = 'Thanks for feedback';
      this.classList.add('bg-red-400/20');
    });

    const stickyCTA = document.getElementById("sticky-cta");
    const finalCTA = document.getElementById("final-cta");
    function checkCTA() {
      if (!stickyCTA || !finalCTA) return;
      const rect = finalCTA.getBoundingClientRect();
      stickyCTA.style.transform = rect.top < window.innerHeight ? "translateY(120%)" : "translateY(0)";
    }
    document.addEventListener("scroll", checkCTA, { passive: true });
    window.addEventListener("resize", checkCTA);
    window.addEventListener("load", checkCTA);
  </script>

  <style>
    .glass {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .glass-btn {
      background: rgba(71, 198, 162, 0.15);
      border: 1px solid #47C6A2;
      color: #fff;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }
    .glass-btn:hover {
      background: #47C6A2;
      color: #050406;
      box-shadow: 0 0 20px rgba(71, 198, 162, 0.4);
    }
  </style>
</Layout>
